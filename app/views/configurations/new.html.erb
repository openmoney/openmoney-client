<%@header="New Configurations" %>

<%= error_messages_for :configuration %>

<% form_for(@configuration) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Configuration type</b><br />
    <%= f.text_field :configuration_type %> (choose one of: <%= Configuration::Types.join(',')%>)
  </p>

  <p>
    <b>Value</b><br />
    <%= f.text_area :value %>
  </p>
  <p>
    <b>Notes:</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', configurations_path %>
