<% @header="Contexts" %>

<table>

<% for om_context in @om_contexts
  @omrl = h om_context.omrl
%>
  <tr>
    <td><%= link_to @omrl, om_context, :html_options =>{:title => 'View details for '<< @omrl} %></td>
    <td><%= icon_link :pencil, edit_om_context_path(om_context), :title => 'Edit access parameters for '<< @omrl %></td>
    <td><%= icon_link :minus, om_context, :title => "Remove #{@omrl} from list of managed contexts", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Manage Existing Context', new_om_context_path %> <br />
<%= link_to 'Create New Context', make_new_om_context_path %>