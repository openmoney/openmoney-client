<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>

<p>
  <b>Username</b><br />
  <%= f.text_field :username %>
</p>

<p>
  <b>Password</b><br />
	
  <%= password_field_tag(name = "password", value = nil, options = {}) %>
  <b>Confirm</b> <%= password_field_tag(name = "password_confirm", value = nil, options = {}) %>
</p>

<p>
  <% if current_user.can? :manage_users%>
  <b>Role</b><br />
  <%= f.collection_select(:role_id, Role.find(:all), :id, :name) %>
  </p>
  <% end %>
  <p>
    <b>First name</b><br />
    <%= f.text_field :first_name %>
  </p>

  <p>
    <b>Last name</b><br />
    <%= f.text_field :last_name %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
