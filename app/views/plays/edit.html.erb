<h3>Editing play</h3>

<%= error_messages_for :play %>

<% form_for(@play) do |f| %>
	<p>
			<%= f.label 'Contribution Status' %>
	  <%= f.select :status, Play::Statuses %>
	</p>

	<%= render(:partial => 'f', :object => f) %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

