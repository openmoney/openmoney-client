<% @header="Currencies" %>

<table>

<% for om_currency in @om_currencies 
  @omrl = h om_currency.omrl
%>
  <tr>
    <td><%= link_to @omrl, om_currency, :html_options =>{:title => 'View details for '<< @omrl} %></td>
    <td><%= icon_link :pencil, edit_om_currency_path(om_currency), :title => 'Edit access parameters for '<< @omrl %></td>
    <td><%= icon_link :minus, om_currency, :title => "Remove #{@omrl} from list of managed currencies", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Manage Existing Currency', new_om_currency_path %> <br />
<%= link_to 'Create New Currency', make_new_om_currency_path %>